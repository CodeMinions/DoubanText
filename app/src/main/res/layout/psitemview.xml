<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.example.xiaoh.doubanmovie.MyImageView
        android:id="@+id/picture_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:paddingTop="12dp"
        android:src="@drawable/ic_launcher_background"/>

    <TextView
        android:id="@+id/movie_title_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="西红柿首富"
        android:textSize="17sp"
        android:textColor="#000000"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/picture_image"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"/>

    <me.zhanghai.android.materialratingbar.MaterialRatingBar
        style="@style/MyRatingBar"
        android:id="@+id/rating_star"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/picture_image"
        android:layout_below="@id/movie_title_Text"
        android:numStars="5"
        android:rating="3.5"
        android:isIndicator="true"
        app:mrb_progressTint="#FFA92E"
        android:layout_width="wrap_content"
        android:layout_height="12dp" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rating_star"
        android:layout_toRightOf="@id/picture_image"
        android:layout_marginLeft="10dp"
        android:textSize="12sp"
        android:textColor="#808080"
        android:text="评分:"
        />

    <TextView
        android:id="@+id/director"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/picture_image"
        android:layout_below="@id/score"
        android:textSize="12sp"
        android:textColor="#808080"
        android:layout_marginLeft="10dp"
        android:text="导演:  "/>

    <TextView
        android:id="@+id/staring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/picture_image"
        android:layout_below="@+id/director"
        android:layout_marginLeft="10dp"
        android:textSize="12sp"
        android:textColor="#808080"
        android:text="主演: "
        />

    <TextView
        android:id="@+id/how_many_people_see"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="45dp"
        android:layout_marginRight="20dp"
        android:text=""
        android:textColor="#F00000"
        />



</RelativeLayout>